<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if (!username) { %>
        <form action="/login" method="POST" class="form-inline">
          <div class="form-group mx-sm-3 mb-2">
            <input
              type="text"
              name="username"
              class="form-control"
              placeholder="username"
            />
          </div>
          <button type="submit" class="btn mb-2 btn-outline-dark">
            Submit
          </button>
        </form>
        <% } else { %> 
        <form class="form-inline" action="/logout" method="POST">
          <div class="mx-sm-1">
            <label for="staticEmail2" class="sr-only">username</label>
            <input type="text" readonly class="form-control-plaintext" style="text-align: center;" value="<%= username %>">
          </div>
          <button type="submit" class="btn btn-outline-dark">Logout</button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>
